<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction" access="global" >
    <aura:attribute name ="message" type ="string"/>
    <aura:attribute name ="visible" type = "boolean"  default = "false"/>
    <aura:handler name ="init" value ="{!this}" action = "{!c.doInit}"/>
    <br></br>
    
    {!v.body}
    
    <br></br>
    Button click result = {!v.message}
    
    <lightning:button label ="create multiple component"  onclick ="{!c.createcompo}"/>
    
    <lightning:button label ="Destroy dynamic component" onclick ="{!c.killaction}" variant ="destructive"/>
    <lightning:button label ="getcallback" onclick = "{!c.handletimeout}" variant = "SUCCESS"/>
    
      <aura:if isTrue="{!v.visible}">
    True  rendered 
    <aura:set attribute="else">
      False
    </aura:set>
  </aura:if> 
</aura:component>