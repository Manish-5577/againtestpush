<aura:component implements="force:appHostable,lightning:actionOverride,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickActionWithoutHeader" access="global" >
	  
    <aura:attribute name ="calllwc" type ="boolean" default="false"/>
    <aura:attribute name ="recordiid" type ="string"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    
    
    <aura:if isTrue="{!v.calllwc}">
    <c:submitapprovalcustom  recordId ="{!v.recordiid}"/>
    
  </aura:if> 

   
      
</aura:component>