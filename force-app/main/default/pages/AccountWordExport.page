<apex:page controller="AccountWordController" contentType="application/msword" cache="true">
    <html>
        <head>
            <style>
                body {
                    font-family: Arial, sans-serif;
                    font-size: 12pt;
                    margin: 1in;
                }
                .logo {
                    text-align: center;
                    margin-bottom: 20px;
                }
                .footer-logo {
                    text-align: center;
                    margin-top: 40px;
                }
            </style>
        </head>
        <body>
            <div class="logo">
                <img src="data:image/png;base64,{!logoBase64}" width="100" height="50"/>
            </div>

            <h2>Account Information</h2>
            <p><strong>Name:</strong> {!account.Name}</p>
            <p><strong>Industry:</strong> {!account.Industry}</p>
            <p><strong>Phone:</strong> {!account.Phone}</p>
            <p><strong>Website:</strong> {!account.Website}</p>

            <div class="footer-logo">
                <img src="data:image/png;base64,{!logoBase64}" width="100" height="50"/>
            </div>
        </body>
    </html>
</apex:page>